<div class="container mt-5">
  <h1 class="mb-4">New Entry</h1>

  <% if current_user %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <form action="/entries" method="post" enctype="multipart/form-data">
          <input type="hidden" name="place_id" value="<%= params["place_id"] %>">

          <div class="mb-3">
            <label for="title_input" class="form-label">Title</label>
            <input type="text" name="title" id="title_input" class="form-control" required>
          </div>

          <div class="mb-3">
            <label for="occurred_on_input" class="form-label">Occurred On</label>
            <input type="date" name="occurred_on" id="occurred_on_input" class="form-control">
          </div>

          <div class="mb-3">
            <label for="uploaded_image_input" class="form-label">Upload Image</label>
            <input
              type="file"
              name="uploaded_image"
              id="uploaded_image_input"
              class="form-control"
              accept="image/png, image/jpg, image/jpeg, image/gif"
            >
          </div>

          <div class="mb-3">
            <label for="description_input" class="form-label">Description</label>
            <input type="text" name="description" id="description_input" class="form-control">
          </div>

          <button type="submit" class="btn btn-primary">Save</button>
        </form>
      </div>
    </div>
  <% else %>
    <div class="alert alert-warning">
      You must <a href="/login">log in</a> to create a new post.
    </div>
  <% end %>
</div>