<!DOCTYPE html>
<html>
  <head>
    <title>Travel Log</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- Bootstrap CSS CDN -->
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" 
      crossorigin="anonymous"
    >

    <link rel="stylesheet" href="/stylesheets/application.css">
  </head>

  <body>
     <div class="container py-3">

      <% if flash["notice"].present? %>
        <div class="alert alert-info text-center">
          <p><%= flash["notice"] %></p>
        </div>
      <% end %>
    </div>

  <!-- Bootstrap Navbar -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Tacostagram</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <a href="/">Home</a>
        <!-- if no user logged-in, display signup and login links -->
        <!-- else, if user logged-in, display user name and logout link -->
        <% @user = User.find_by({ "id" => session["user_id"] }) %>
        <% if @user != nil %>
          <li class="nav-item">
            <span class="nav-link">Welcome, <%= @user.username %>!</span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        <% else %>
          <!-- Show this if user is not logged in -->
          <li class="nav-item">
            <a class="nav-link" href="/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/new">Signup</a>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <%= yield %>

  <!-- Bootstrap JS Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ZwB4e8SKw3Q6K/zVd9pAEYQ1UkYlT+1V8+m5XyPTTcZ49efUZRmDJb68hzHjXK9r"
      crossorigin="anonymous"
    ></script>

  </body>
</html>
