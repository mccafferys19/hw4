<div class="container mt-4">
  <h1 class="mb-4 text-center">Places</h1>

  <% if @places.any? %>
    <div class="row justify-content-center gx-3 gy-4">
      <% for place in @places %>
        <div class="col-md-6 col-lg-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <h5 class="card-title">
                <a href="/places/<%= place["id"] %>" class="stretched-link text-decoration-none text-dark">
                  <%= place["name"] %>
                </a>
              </h5>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">You havenâ€™t added any places yet.</p>
  <% end %>

  <div class="mt-4 text-center">
    <a href="/places/new" class="btn btn-primary">New Place</a>
  </div>
</div>