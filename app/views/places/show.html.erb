<div class="container mt-4">
  <h1 class="mb-4"><%= @place["name"] %></h1>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">My Entries</h2>
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
  </div>

  <% if @entries.any? %>
    <div class="row gx-3 gy-4">
      <% @entries.each do |entry| %>
        <div class="col-md-4">
          <div class="card h-100">
            <div class="card-body text-center">
              <h5 class="card-title mb-1"><%= entry.title %></h5>
              <p class="text-muted small mb-2"><%= entry.occurred_on %></p>

              <% if entry.uploaded_image.attached? %>
                <%= image_tag entry.uploaded_image, class: "img-fluid rounded mb-2", style: "max-height: 300px;" %>
              <% end %>

              <p class="card-text small"><%= entry.description %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No entries yet.</p>
  <% end %>

  <div class="mt-4">
    <a href="/places" class="btn btn-outline-secondary">Back to All Places</a>
  </div>
</div>